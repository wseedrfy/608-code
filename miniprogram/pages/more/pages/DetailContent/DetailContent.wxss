}
swiper{
  width: 100%; 
}
swiper image{
  width: 100%;
  height: 100%;
}
swiper .wx-swiper-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  display: inline-flex;
  justify-content: space-between;
}
.content_first{
  padding-top: 17rpx;
  width:700rpx;
